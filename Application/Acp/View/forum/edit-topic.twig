{% extends "@Acp/base.twig" %}
{% block content %}
<h3>Edit Topic "{{ topic.getName() }}"</h3>
<form action="{{ url }}/acp/forum/edit-topic/{{ topic.getId() }}" method="post">
  <div class="form-group" >
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" name="topic_name" class="form-control" id="exampleFormControlInput1" value="{{ topic.getName() }}">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Visible</label>
     <input type="checkbox" name="active" value="" {% if topic.getEnabled() == 1 %} checked {% endif %}>
  </div>
  <div class="form-group">

      {% for role in usedRoles %}
        <label for="exampleFormControlTextarea1">{{ role.getName() }}</label>
        <input type="checkbox" name="{{ role.getName() }}" value="{{ role.getId() }}" checked> <br />
      {% endfor %}
      {% for role in roles %}
        <label for="exampleFormControlTextarea1">{{ role.getName() }}</label>
        <input type="checkbox" name="{{ role.getName() }}" value="{{ role.getId() }}"><br />
      {% endfor %}
     
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
{% endblock %}
